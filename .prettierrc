{
    "trailingComma": "none",
    "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html" }
        }
    ],
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 80,
    "editor.formatOnSave": true,
    "singleQuote": true,
    "bracketSpacing": true
}
